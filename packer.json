{
  "variables":{
    "aws_access_key": "{{env `AWS_ACESSS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY_ID`}}",
    "version": "{{env `GIT_TAG_NAME`}}"
  },
  "builders":[{
    "type": "amazon-ebs",
    "subnet_id": "subnet-0f5808733370665a4",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ssh_private_key_file": "~/.ssh/Team1BastionHost.pem",
    "ssh_agent_auth": true,
    "region": "eu-west-1",
    "source_ami_filter":{
      "filters":{
        "virtualization-type": "hvm",
        "name": "ubuntu/images/hvm-ssd/ubuntu-xenial-16.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "example-node-app-kirt-{{timestamp}}"
  }]
}
